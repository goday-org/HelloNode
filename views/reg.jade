extends layout

block content
    form.form-horizontal(method='post')
        fieldset
            legend 用户注册
            .control-group
                label.control-label(for='username') 用户名
                .controls
                    input#username.input-xlarge(type='text', name='username')
                    p.help-block 你的帐户名称，用于登录和显示。
            .control-group
                label.control-label(for='password') 密码
                .controls
                    input#password.input-xlarge(type='password', name='password')
            .control-group
                label.control-label(for='password-repeat') 重复密码
                .controls
                    input#password-repeat.input-xlarge(type='password', name='password-repeat')   
            .form-actions
                button.btn.btn-primary(type='submit') 注册