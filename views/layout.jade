doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    style
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')    
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/jquery-1.9.1.min.js')
  body
    .navbar.navar-fixed-top
        .navbar-inner
            .container
                a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.brand(href='/') Microblog
                .nav-collapse
                    ul.nav
                        li.active
                            a(href='/') 首页
                         
                        if !locals.user
                            li
                                a(href='/login') 登入
                            li  
                                a(href='/reg') 注册
                        else
                            li 
                                a(href='/logout') 登出
        if locals.success 
            .alert-success #{success}
        if locals.error 
            .alert-error #{error}
        
    #container.container
        block content
    footer
        p
            a(href='http://www.google.com', target='_blank') Google
